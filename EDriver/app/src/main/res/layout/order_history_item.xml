<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="250dp">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/CV"
            card_view:cardBackgroundColor="#f0f0fa"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="2dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_history_id_TV"
                    android:textSize="22dp"
                    android:text="Номер заказа"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/summ_history_TV"
                    android:text="Стоимость"
                    android:layout_below="@id/order_history_id_TV"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distance_history_TV"
                    android:text="Расстояние"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_below="@id/summ_history_TV"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_type_history_TV"
                    android:text="Тип авто"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_below="@id/distance_history_TV"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"/>


                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:id="@+id/history_rate_RB"
                    android:layout_below="@id/car_type_history_TV"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>