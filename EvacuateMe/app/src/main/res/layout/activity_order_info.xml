<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.evacuateme.Activity.OrderInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ИНФОРМАЦИЯ О ЗАКАЗЕ!"
        android:id="@+id/textView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_order_id_TV"
        android:text="ID ЗАКАЗА"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/info_company_TV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_distance_TV"
        android:text="Дистанция"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/info_order_id_TV"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_summary_TV"
        android:text="Сумма заказа"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/info_distance_TV"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_company_TV"
        android:text="Название фирмы"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/info_summary_TV"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Завершить"
        android:layout_marginTop="138dp"
        android:id="@+id/confirm_completion_BTN"
        android:layout_below="@+id/info_company_TV"
        android:layout_centerHorizontal="true"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/info_company_TV"
        android:layout_marginStart="46dp"
        android:layout_marginTop="35dp"
        />

</RelativeLayout>
