<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/CV"
        card_view:cardBackgroundColor="#f0f0fa"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/company_name_TV"
                android:textSize="22dp"
                android:text="Название фирмы"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/min_sum_TV"
                android:text="Заказ от  "
                android:layout_below="@id/company_name_TV"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tariff_TV"
                android:text="Тариф: 15р/км"
                android:layout_below="@id/min_sum_TV"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/duration_TV"
                android:text="Время прибытия"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_below="@id/tariff_TV"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:id="@+id/companies_rate_RB"
                android:layout_below="@id/duration_TV"
                android:layout_alignParentStart="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_order_BTN"
                android:text="Заказать"
                android:layout_alignParentBottom="true"
                android:background="#5AC1E2"
                android:textColor="#FFFFFF"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>